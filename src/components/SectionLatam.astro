---
const eventos = [
    {
        nombre: "Hackathon Climático 2025",
        tipo: "Hackathon",
        lugar: "Buenos Aires, Argentina",
        fecha: "Feb 15-17, 2025",
        descripcion:
            "72 horas para crear soluciones tecnológicas contra el cambio climático.",
    },
    {
        nombre: "LATAM Tech Summit",
        tipo: "Conferencia",
        lugar: "Ciudad de México",
        fecha: "Mar 5-7, 2025",
        descripcion: "El evento más grande de tecnología en América Latina.",
    },
    {
        nombre: "Women in Tech Meetup",
        tipo: "Meetup",
        lugar: "São Paulo, Brasil",
        fecha: "Feb 20, 2025",
        descripcion:
            "Networking y charlas inspiradoras de mujeres líderes en tecnología.",
    },
    {
        nombre: "DevOps Days Lima",
        tipo: "Conferencia",
        lugar: "Lima, Perú",
        fecha: "Abr 10-11, 2025",
        descripcion:
            "Dos días dedicados a DevOps, SRE y cultura de ingeniería.",
    },
    {
        nombre: "AI for Good Hackathon",
        tipo: "Hackathon",
        lugar: "Bogotá, Colombia",
        fecha: "Mar 22-24, 2025",
        descripcion:
            "Usando inteligencia artificial para resolver problemas sociales.",
    },
    {
        nombre: "Startup Weekend Santiago",
        tipo: "Hackathon",
        lugar: "Santiago, Chile",
        fecha: "Feb 28 - Mar 2, 2025",
        descripcion: "De idea a prototipo en 54 horas.",
    },
];
---

<section id="eventos" class="section">
    <div class="section-container">
        <span class="section-label">Eventos</span>
        <h2 class="section-title">LATAM: Eventos y movimientos</h2>
        <p class="section-description">
            Hackatones, conferencias y meetups que están marcando el pulso
            tecnológico de la región.
        </p>

        <div class="events-grid">
            {
                eventos.map((evento) => (
                    <div class="event-card">
                        <span class="event-type">{evento.tipo}</span>
                        <h3 class="event-name">{evento.nombre}</h3>
                        <p class="event-description">{evento.descripcion}</p>
                        <div class="event-meta">
                            <p class="event-location">{evento.lugar}</p>
                            <p class="event-date">{evento.fecha}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .section {
        padding: 5rem 0;
        border-bottom: 1px solid var(--border);
    }

    .section-container {
        max-width: 80rem;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .section-label {
        display: block;
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--muted-foreground);
        margin-bottom: 1rem;
    }

    .section-title {
        font-family: Georgia, serif;
        font-size: 2.5rem;
        font-weight: 400;
        line-height: 1.2;
        color: var(--foreground);
        margin-bottom: 1rem;
    }

    .section-description {
        font-size: 1.25rem;
        color: var(--muted-foreground);
        max-width: 42rem;
        margin-bottom: 3rem;
    }

    .events-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .event-card {
        padding: 1.5rem;
        background: var(--card);
        border-radius: var(--radius);
        transition: background-color 0.2s;
    }

    .event-card:hover {
        background: var(--secondary);
    }

    .event-type {
        display: inline-block;
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--muted-foreground);
        margin-bottom: 0.5rem;
    }

    .event-name {
        font-family: Georgia, serif;
        font-size: 1.25rem;
        font-weight: 400;
        color: var(--foreground);
        margin-bottom: 0.5rem;
    }

    .event-description {
        font-size: 0.875rem;
        color: var(--muted-foreground);
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .event-meta {
        padding-top: 1rem;
        border-top: 1px solid var(--border);
    }

    .event-location {
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--foreground);
    }

    .event-date {
        font-size: 0.875rem;
        color: var(--muted-foreground);
    }

    @media (min-width: 640px) {
        .events-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .events-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
