---
import MagazineSidebar from './MagazineSidebar.astro';

const events = [
  {
    name: "HackMTY 2025",
    date: "15-17 Enero",
    location: "Monterrey, México",
    type: "Hackathon",
    description: "El hackathon más grande de México regresa con premios de $50,000 USD y tracks de AI, FinTech y ClimateTech.",
    url: "#",
  },
  {
    name: "DevCon LATAM",
    date: "8-10 Marzo",
    location: "CDMX, México",
    type: "Conferencia",
    description: "Tres días de charlas, workshops y networking con speakers de Google, Meta, y startups líderes de la región.",
    url: "#",
  },
  {
    name: "Nerdearla",
    date: "22-24 Abril",
    location: "Buenos Aires, Argentina",
    type: "Conferencia",
    description: "El evento de tecnología más grande de Argentina vuelve con más de 100 charlas y 5000 asistentes esperados.",
    url: "#",
  },
  {
    name: "Startup Weekend São Paulo",
    date: "7-9 Febrero",
    location: "São Paulo, Brasil",
    type: "Hackathon",
    description: "54 horas para convertir una idea en un MVP. Mentores de Nubank, iFood y otros unicornios brasileños.",
    url: "#",
  },
];
---

<section id="latam" class="section">
  <div class="section-container">
    <MagazineSidebar
      title="Lo que pasa en LATAM"
      subtitle="Eventos, hackathones y encuentros del ecosistema tech regional"
      metadata="Próximos 3 meses"
    />

    <div class="section-content">
      {events.map((event, index) => (
        <div class:list={["event-card", { "event-card-alt": index % 2 === 1, "event-card-last": index === events.length - 1 }]}>
          <div class="event-main">
            <div class="event-info">
              <span class="event-type">{event.type}</span>
              <h3 class="event-name">{event.name}</h3>
              <p class="event-description">{event.description}</p>
            </div>

            <div class="event-meta">
              <div class="event-meta-item">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                  <line x1="16" y1="2" x2="16" y2="6"/>
                  <line x1="8" y1="2" x2="8" y2="6"/>
                  <line x1="3" y1="10" x2="21" y2="10"/>
                </svg>
                <span>{event.date}</span>
              </div>
              <div class="event-meta-item">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                <span>{event.location}</span>
              </div>
              <a href={event.url} class="event-link">
                <span>Más info</span>
                <svg class="icon-small" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .section {
    padding: 4rem 0;
    border-bottom: 1px solid var(--border);
  }

  .section-container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .section-content {
    flex: 1;
  }

  .event-card {
    padding: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .event-card-last {
    border-bottom: none;
  }

  .event-card-alt {
    background: var(--secondary);
    border-radius: var(--radius);
    border-bottom: none;
    margin-bottom: 0.5rem;
  }

  .event-card-alt + .event-card {
    border-top: none;
  }

  .event-main {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .event-info {
    flex: 1;
  }

  .event-type {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
    background: var(--muted);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius);
  }

  .event-name {
    margin-top: 0.5rem;
    font-family: Georgia, serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--foreground);
  }

  .event-description {
    margin-top: 0.5rem;
    color: var(--muted-foreground);
    line-height: 1.6;
  }

  .event-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--muted-foreground);
  }

  .event-meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .event-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--accent);
    transition: color 0.2s;
    margin-top: 0.25rem;
  }

  .event-link:hover {
    color: var(--foreground);
  }

  .icon {
    width: 1rem;
    height: 1rem;
  }

  .icon-small {
    width: 0.75rem;
    height: 0.75rem;
  }

  @media (min-width: 640px) {
    .event-main {
      flex-direction: row;
      justify-content: space-between;
    }

    .event-meta {
      text-align: right;
      align-items: flex-end;
      min-width: 10rem;
    }

    .event-meta-item {
      justify-content: flex-end;
    }

    .event-link {
      justify-content: flex-end;
    }
  }

  @media (min-width: 768px) {
    .section-container {
      flex-direction: row;
      gap: 4rem;
    }
  }
</style>
