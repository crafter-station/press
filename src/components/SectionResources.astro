---
import MagazineSidebar from './MagazineSidebar.astro';

const resources = [
  {
    type: "Libro",
    icon: "book",
    title: "System Design Interview Vol. 2",
    author: "Alex Xu",
    description: "La continuación del clásico. Cubre diseño de sistemas de chat, rate limiters, motores de búsqueda y más. Esencial para interviews en FAANG.",
    url: "#",
  },
  {
    type: "Repositorio",
    icon: "github",
    title: "Pocketbase",
    author: "github.com/pocketbase",
    description: "Backend en un solo archivo. SQLite + Auth + Realtime + Admin UI. Perfecto para MVPs y proyectos personales sin la complejidad de Firebase.",
    url: "#",
  },
  {
    type: "Herramienta",
    icon: "wrench",
    title: "Cursor AI",
    author: "cursor.com",
    description: "El IDE que está cambiando cómo programamos. Integración profunda con LLMs que entiende tu codebase completo. Gratis para proyectos pequeños.",
    url: "#",
  },
];
---

<section id="recursos" class="section">
  <div class="section-container">
    <MagazineSidebar
      title="Recursos del Mes"
      subtitle="Libros, repos y herramientas que recomendamos"
      metadata="Curación mensual"
    />

    <div class="section-content">
      <div class="resources-grid">
        {resources.map((resource) => (
          <div class="resource-card">
            <div class="resource-icon">
              {resource.icon === "book" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                </svg>
              )}
              {resource.icon === "github" && (
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {resource.icon === "wrench" && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
                </svg>
              )}
            </div>
            <div class="resource-content">
              <span class="resource-type">{resource.type}</span>
              <h3 class="resource-title">{resource.title}</h3>
              <p class="resource-author">{resource.author}</p>
              <p class="resource-description">{resource.description}</p>
              <a href={resource.url} class="resource-link">
                <span>Ver recurso</span>
                <svg class="icon-small" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .section {
    padding: 4rem 0;
    border-bottom: 1px solid var(--border);
    background: var(--card);
  }

  .section-container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .section-content {
    flex: 1;
  }

  .resources-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .resource-card {
    display: flex;
    gap: 1rem;
  }

  .resource-icon {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: var(--radius);
    background: var(--secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .resource-icon svg {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--accent);
  }

  .resource-content {
    flex: 1;
  }

  .resource-type {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
  }

  .resource-title {
    margin-top: 0.25rem;
    font-family: Georgia, serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--foreground);
  }

  .resource-author {
    font-size: 0.875rem;
    color: var(--muted-foreground);
  }

  .resource-description {
    margin-top: 0.5rem;
    color: var(--muted-foreground);
    line-height: 1.6;
  }

  .resource-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.75rem;
    font-size: 0.875rem;
    color: var(--accent);
    transition: color 0.2s;
  }

  .resource-link:hover {
    color: var(--foreground);
  }

  .icon-small {
    width: 0.75rem;
    height: 0.75rem;
  }

  @media (min-width: 768px) {
    .section-container {
      flex-direction: row;
      gap: 4rem;
    }
  }
</style>
