---
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
    { label: "Eventos", href: "#eventos" },
    { label: "Proyecto", href: "#proyecto" },
    { label: "Artículos", href: "#articulos" },
    { label: "Persona", href: "#persona" },
    { label: "Recursos", href: "#recursos" },
];
---

<header class="header">
    <div class="header-container">
        <div class="logo">
            <a href="/" class="logo-text">Press</a>
            <a
                href="https://crafterstation.com"
                target="_blank"
                rel="noopener noreferrer"
                class="logo-subtitle">by CrafterStation</a
            >
        </div>
        <nav class="nav">
            {
                navItems.map((item) => (
                    <a href={item.href} class="nav-link">
                        {item.label}
                    </a>
                ))
            }
            <ThemeToggle />
        </nav>
        <button class="mobile-menu-button" aria-label="Abrir menú">
            <svg
                class="icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <line x1="3" y1="12" x2="21" y2="12"></line>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
        </button>
    </div>
</header>

<style>
    .header {
        position: sticky;
        top: 0;
        z-index: 50;
        border-bottom: 1px solid var(--border);
        backdrop-filter: blur(12px);
        background-color: color-mix(
            in srgb,
            var(--background) 80%,
            transparent
        );
    }

    .header-container {
        max-width: 80rem;
        margin: 0 auto;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .logo-text {
        font-family: Georgia, serif;
        font-size: 1.5rem;
        font-weight: 700;
        letter-spacing: -0.025em;
        color: var(--foreground);
    }

    .logo-subtitle {
        font-size: 0.75rem;
        color: var(--muted-foreground);
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        transition: color 0.2s;
    }

    .logo-subtitle:hover {
        color: var(--foreground);
    }

    .nav {
        display: none;
        align-items: center;
        gap: 2rem;
    }

    .nav-link {
        font-size: 0.875rem;
        color: var(--muted-foreground);
        transition: color 0.2s;
    }

    .nav-link:hover {
        color: var(--foreground);
    }

    .mobile-menu-button {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        background: none;
        border: none;
        cursor: pointer;
        color: var(--foreground);
    }

    .icon {
        width: 1.5rem;
        height: 1.5rem;
    }

    @media (min-width: 768px) {
        .nav {
            display: flex;
        }

        .mobile-menu-button {
            display: none;
        }
    }
</style>
